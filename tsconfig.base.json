{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@grillo-software/ui": ["libs/ui/src/index.ts"],
      "@grillo-software/environments": ["libs/environments/src/index.ts"],
      "@grillo-software/stock-list": ["libs/stock-list/src/index.ts"],
      "@grillo-software/indices-bar": ["libs/indices-bar/src/index.ts"],
      "@grillo-software/admin-dashboard": ["libs/admin-dashboard/src/index.ts"],
      "@grillo-software/company-profile": ["libs/company-profile/src/index.ts"],
      "@grillo-software/final-user/briefcase": [
        "libs/final-user/briefcase/src/index.ts"
      ],
      "@grillo-software/service": ["libs/service/src/index.ts"],
      "@grillo-software/final-user/stock": [
        "libs/final-user/stock/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
